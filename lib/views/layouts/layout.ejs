<!DOCTYPE html>
<html lang="en">

<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
  <% if (options.developmentMode) { %>
  <link rel="stylesheet" href="<%= baseURI %>/public/css/output.css">
  <% } else { %>
  <link rel="stylesheet" href="<%= baseURI %>/public/css/main.min.css">
  <% } %>
</head>

<body>
  <div class="bg-white">
    <%- include('../partials/header') %>
    <div id="content">
      <div class="relative px-6 isolate pt-14 lg:px-8">
        <div class="max-w-2xl py-32 mx-auto sm:py-48 lg:py-56">
          <div class="text-center">
            <%- content %>
          </div>
        </div>
      </div>
    </div>
    <% if (options.developmentMode) { %>
    <script src="<%= baseURI %>/public/js/vendor/htmx@1.9.3/htmx.js"></script>
    <script src="<%= baseURI %>/public/js/main.js"></script>
    <% } else { %>
    <script src="<%= baseURI %>/public/js/vendor.min.js"></script>
    <script src="<%= baseURI %>/public/js/main.min.js"></script>
    <% } %>
</body>

</html>